<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="practice.service.MessageMapper">

    <resultMap id="message" type="practice.domain.Message">
        <result property="id" column="id"/>
        <result property="contents" column="contents"/>
    </resultMap>

    <sql id="message-column-list">
        m.id, m.contents
    </sql>

    <select id="findAll" resultMap="message">
        SELECT
        <include refid="message-column-list"/>
        FROM message m
    </select>

    <select id="findById" resultMap="message">
        SELECT
        <include refid="message-column-list"/>
        FROM MESSAGE WHERE ID = #{id}
    </select>

    <insert id="save">
        INSERT INTO MESSAGE (contents) VALUES (#{contents})
    </insert>

</mapper>

